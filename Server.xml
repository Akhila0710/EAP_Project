<server description="new server">

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint httpPort="9080" httpsPort="9443" id="defaultHttpEndpoint"/>

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>

    <!-- Default SSL configuration enables trust for default certificates from the Java runtime --> 
    <ssl id="defaultSSLConfig" trustDefaultCerts="true"/>

    <applicationMonitor updateTrigger="mbean"/>

    <webApplication id="TotTak" location="TotTak.war" name="TotTak"/>
    
    <library id="derbyLib">
    	<fileset dir="D:\db-derby-10.14.2.0-bin\lib" includes="*.jar"/>
    </library>
    
    <dataSource jndiName="jdbc/DerbyDS">
    	<jdbcDriver libraryRef="derbyLib" javax.sql.XADataSource="org.apache.derby.jdbc.ClientXADataSource"/>
    	
    	<properties.derby.client databaseName="tottak" createDatabase="create" serverName="localhost" port="1527" user="APP" password="APP"/>
    </dataSource>
    

    <featureManager>
        <feature>localConnector-1.0</feature>
        <feature>jsp-2.3</feature>
        <feature>ejbLite-3.2</feature>
        <feature>jaxrs-2.1</feature>
    	<feature>jpa-2.2</feature>
		<feature>jsonb-1.0</feature>
	</featureManager>
</server>